								      </resources>              
							    </configuration>            
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>skip-copy-picketlink</id>
			<build>
				<plugins>	
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.6</version>
						<executions>							
							<execution>
							    <id>copy-conf</id>
							    <phase>test</phase>
							    <goals>
							    	<goal>copy-resources</goal>
