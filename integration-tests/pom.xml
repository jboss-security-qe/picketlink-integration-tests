<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>picketlink-integration-tests-parent</artifactId>
		<groupId>org.picketlink</groupId>
        <version>2.5-SNAPSHOT</version>
		<relativePath>../parent</relativePath>
	</parent>
	<artifactId>picketlink-integration-container</artifactId>
	<packaging>pom</packaging>

	<properties>
		<integration.tests.dir>${basedir}/target/integration-tests</integration.tests.dir>
		<integration.tests.containers.dir>${integration.tests.dir}/containers</integration.tests.containers.dir>
		<arquillian.container>jboss</arquillian.container>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<inherited>true</inherited>
				<version>1.6</version>
				<!-- This execution prepares a distribution package for the subsystem. -->
				<executions>
					<execution>
						<id>prepare-environment</id>
						<goals>
							<goal>run</goal>
						</goals>
						<phase>process-test-classes</phase>
						<configuration>
							<target>
								<property name="maven.repo.local" value="${settings.localRepository}" />
								<echo>Preparing Environment for ${picketlink.binding} Integration Tests</echo>
								<ant antfile="${basedir}/ant-scripts/build.xml" target="prepare-test-environment" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12</version>
				<configuration>
					<skipTests>true</skipTests>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>2.12</version>
				<executions>
                    <execution>
                        <id>integration-test-manual-mode</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/*ManualTestCase.java</include>
                            </includes>
                            <systemProperties>
                                <property>
                                    <name>project.artifactId</name>
                                    <value>${project.artifactId}</value>
                                </property>
								<property>
                                    <name>project.version</name>
                                    <value>${project.version}</value>
                                </property>
                                <property>
                                    <name>version.picketlink</name>
                                    <value>${version.picketlink}</value>
                                </property>
                                <property>
                                    <name>version.picketlink.quickstarts</name>
                                    <value>${version.picketlink.quickstarts}</value>
                                </property>
                                <property>
                                    <name>binding</name>
                                    <value>${binding.server}</value>
                                </property>
                                <property>
                                    <name>jboss.as.home</name>
                                    <value>${jboss.as.home}</value>
                                </property>
                                <property>
                                    <name>maven.repo.local</name>
                                    <value>${settings.localRepository}</value>
                                </property>
                                <property>
                                    <name>picketlink.ts.maven.user.settings</name>
                                    <value>${picketlink.ts.maven.user.settings}</value>
                                </property>
                                <property>
                                    <name>JAVA_OPTS</name>
                                    <value>${env.JAVA_OPTS}</value>
                                </property>
                                <property>
                                    <name>arquillian.container</name>
                                    <value>server-manual</value>
                                </property>
                            </systemProperties>
                            <reportNameSuffix>SAML-${binding.server}</reportNameSuffix>
                        </configuration>
                    </execution>

					<execution>
						<id>integration-test</id>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
						<configuration>
							<includes>
								<include>**/*TestCase.java</include>
							</includes>
							<excludes>
								<exclude>**/*ManualTestCase.java</exclude>
							</excludes>
							<systemProperties>
								<property>
									<name>project.artifactId</name>
									<value>${project.artifactId}</value>
								</property>
								<property>
									<name>project.version</name>
									<value>${project.version}</value>
								</property>
								<property>
									<name>version.picketlink</name>
									<value>${version.picketlink}</value>
								</property>
								<property>
									<name>version.picketlink.quickstarts</name>
									<value>${version.picketlink.quickstarts}</value>
								</property>
								<property>
									<name>binding</name>
									<value>${binding.server}</value>
								</property>
								<property>
									<name>jboss.as.home</name>
									<value>${jboss.as.home}</value>
								</property>
								<property>
									<name>maven.repo.local</name>
									<value>${settings.localRepository}</value>
								</property>
								<property>
									<name>picketlink.ts.maven.user.settings</name>
									<value>${picketlink.ts.maven.user.settings}</value>
								</property>
								<property>
									<name>JAVA_OPTS</name>
									<value>${env.JAVA_OPTS}</value>
								</property>
							</systemProperties>
							<reportNameSuffix>SAML-${binding.server}</reportNameSuffix>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

